{
    "connector": {
        "name": "resthunter-connect"
    },
    "formatters": ["resthunter-format"],
    "hints": {
        "content-type": ["error", {
            ".*\\.js": "application/javascript; charset=utf-8"
        }],
        "compat-api/html": ["error", {
            "ignore": ["blink", "border-radius", "box-lines"],
            "enable": ["integrity", "cursor"]
        }],
        "manifest-file-extension": "error"
    },
    "browserslist": [
        "> 1%",
        "last 2 versions",
        "-moz-appearance: none",
        "-webkit-appearance: none",
        "appearance: none",
        "cursor",
        "zoom: 1",
        "a[rel=noopener]",
        "autocomplete",
        "crossorigin",
        "input[inputmode]",
        "integrity",
        "link[rel]",
        "main",
        "spellcheck"
    ],
    "parsers": ["resthunter-parse"]
}